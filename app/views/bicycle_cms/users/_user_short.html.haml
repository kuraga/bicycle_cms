= content_tag_for :tr, user, :short do
  %td
    = link_to image_tag(user.avatar.small.url), user
  %td
    = render_panel_for user do
      = link_to user.name, user
  %td
    - if user.admin?
      = t('bicycle_cms/users.states.admin')
    - else # FIXME
      = t('bicycle_cms/users.states.active')
  %td= (signed_in_as_admin? || user.show_email?) ? mail_to(user.email) : t('general.messages.hidden')
  %td= I18n.localize(user.created_at, format: :datetime_full)
